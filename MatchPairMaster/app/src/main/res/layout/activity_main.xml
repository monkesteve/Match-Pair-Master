<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity"
    android:background="#58A4B1">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="500dp"
        android:layout_marginTop="190dp"
        android:scaleType="centerCrop"
        android:src="@drawable/iqbg" />

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="400dp">


        <TextView
            android:layout_width="287dp"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="53dp"
            android:layout_marginLeft="65dp"
            android:layout_marginTop="108dp"
            android:layout_marginEnd="53dp"
            android:fontFamily="@font/bowlby_one_sc"
            android:gravity="center"
            android:text="MATCH PAIR MASTER"
            android:textAlignment="center"
            android:textColor="#EEE"
            android:textSize="18pt" />

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="vertical"
        android:layout_marginTop="550dp">

        <Button
            android:id="@+id/start"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="@drawable/custom_button"
            android:onClick="start"
            android:text="Start"
            android:textColor="#FFFFFF" />

        <Button
            android:id="@+id/score"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="15dp"
            android:background="@drawable/custombtn2"
            android:onClick="scoreBoard"
            android:text="Score Board"
            android:textColor="#FFFFFF" />
        <Button
            android:id="@+id/tl"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="15dp"
            android:background="@drawable/custombtnblue"
            android:onClick="textlog"
            android:text="Your Record"
            android:textColor="#FFFFFF" />
    </LinearLayout>


    <TextView
        android:id="@+id/tvData"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

</RelativeLayout>